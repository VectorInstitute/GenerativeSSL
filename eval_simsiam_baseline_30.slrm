#!/bin/bash

#SBATCH --job-name="simsiam_eval"
#SBATCH --partition=a40
#SBATCH --time=12:00:00
#SBATCH --qos=m
#SBATCH --nodes=1
#SBATCH --gres=gpu:4
#SBATCH --ntasks-per-node=4
#SBATCH --cpus-per-task=4
#SBATCH --mem-per-cpu=4G
#SBATCH --output=slurm-%j.out

PY_ARGS=${@:1}

# load virtual environment
source /ssd003/projects/aieng/envs/genssl2/bin/activate

export TORCH_NCCL_ASYNC_ERROR_HANDLING=1 # set to 1 for NCCL backend
export CUDA_LAUNCH_BLOCKING=1

export MASTER_ADDR=$(hostname)
export MASTER_PORT=45679

export PYTHONPATH="."
nvidia-smi

# “srun” executes the script <ntasks-per-node * nodes> times
srun python simsiam/linear_eval.py \
--data_dir="/scratch/ssd004/datasets/imagenet256" \
--arch="resnet50" \
--distributed_mode \
--batch-size=256 \
--epochs=100 \
--pretrained_checkpoint="/projects/imagenet_synthetic/model_checkpoints/simsiam_baseline_2024-02-28-15-16/checkpoint_0030.pth.tar"
